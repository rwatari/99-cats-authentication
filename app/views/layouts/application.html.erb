<!DOCTYPE html>
<html>
<head>
  <title>NinetyNineCatsDay1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <% if current_user %>
      <h3> Hi <%= current_user.username %> </h3>
      <%= link_to "User Page", user_url(current_user) %>
      <%= button_to "Log out", session_url, method: :delete %>
    <% else %>
      <h3> Hello guest! </h3>
      <%= link_to "Log in", new_session_url %>
      <%= link_to "Sign up", new_user_url %>

    <% end %>

  </header>

<%= yield %>

</body>
</html>
